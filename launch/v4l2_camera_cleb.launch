<launch>
  <!-- camera resolution -->
  <arg name="img_w" default="1920" />
  <arg name="img_h" default="1080" />
  
  <node name="cam1" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam.yml"/>
      <param name="video_device" value="/dev/video0" />
      <param name="image_width" value="$(arg img_w)" />
      <param name="image_height" value="$(arg img_h)" />
  </node>
  
  <node name="cam2" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam.yml"/>
      <param name="video_device" value="/dev/video1" />
      <param name="image_width" value="$(arg img_w)" />
      <param name="image_height" value="$(arg img_h)" />
  </node>
  
  <node name="cam3" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam.yml"/>
      <param name="video_device" value="/dev/video2" />
      <param name="image_width" value="$(arg img_w)" />
      <param name="image_height" value="$(arg img_h)" />
  </node>
  
  <node name="cam4" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <rosparam command="load" file="$(find usb_cam)/config/usb_cam.yml"/>
      <param name="video_device" value="/dev/video3" />
      <param name="image_width" value="$(arg img_w)" />
      <param name="image_height" value="$(arg img_h)" />
  </node>
  
</launch>
